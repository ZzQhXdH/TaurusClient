<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="800px"
    android:layout_height="1300px"
    android:orientation="vertical"
    android:background="@drawable/shape_order_popup">

    <FrameLayout
        android:layout_width="600px"
        android:layout_height="600px"
        android:layout_gravity="center"
        android:layout_marginTop="100px">

        <ImageView
            android:id="@+id/id_new_popup_order_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <ProgressBar
            android:id="@+id/id_new_popup_order_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_marginTop="100px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_new_popup_order_text_view_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="红烧牛肉"
            android:textColor="@android:color/black"
            android:textSize="50px" />

        <TextView
            android:id="@+id/id_new_popup_order_text_view_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="$20"
            android:textColor="@android:color/black"
            android:textSize="50px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:layout_marginTop="75px"
        android:orientation="horizontal">

        <Button
            android:id="@+id/id_new_popup_order_button_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_button_cancel"
            android:text="取消选择"
            android:textColor="@android:color/white"
            android:textSize="50px" />

        <Button
            android:id="@+id/id_new_popup_order_button_wechat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:layout_weight="1"
            android:background="@drawable/selector_button_wechat" />

        <Button
            android:id="@+id/id_new_popup_order_button_alipay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_button_alipay" />
    </LinearLayout>

</LinearLayout>